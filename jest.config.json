{
  "transform": { "^.+\\.ts?$": "ts-jest" },
  "testEnvironment": "node",
  "verbose": true,
  "testMatch": ["**/test/*.test.ts?(x)"],
  "clearMocks": true,
  "preset": "ts-jest",
  "collectCoverage": true,
  "coverageReporters": ["html", "text-summary"],
  "coverageThreshold": {
    "global": {
      "branches": 95,
      "functions": 80,
      "lines": 95,
      "statements": 95
    }
  },
  "setupFilesAfterEnv": ["<rootDir>/test/utils/singleton.ts"],
  "setupFiles": ["<rootDir>/test/utils/setup.ts"]
}
