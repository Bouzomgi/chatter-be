{
  "rootDir": ".", 
  "testEnvironment": "node",
  "verbose": true,
  "collectCoverage": true,
  "coverageReporters": ["html", "text-summary"],
  "coverageThreshold": {
    "global": {
      "branches": 95,
      "functions": 80,
      "lines": 95,
      "statements": 95
    }
  },
  "projects": [
    {
      "displayName": "unit",
      "moduleNameMapper": {
        "^@src/(.*)": "<rootDir>/src/$1",
        "^@test/(.*)": "<rootDir>/test/$1",
        "^@openapi/(.*)": "<rootDir>/openapi/$1"
      },
      "transform": { "^.+\\.ts?$": "ts-jest" },
      "testMatch": ["<rootDir>/test/unit/**/*.test.ts"],
      "setupFilesAfterEnv": [
        "<rootDir>/test/setup/commonSetup.ts"
      ],
      "coveragePathIgnorePatterns": [
        "<rootDir>/src/api/*",
        "<rootDir>/test/*"
      ]
    },
    {
      "displayName": "integration",
      "moduleNameMapper": {
        "^@src/(.*)": "<rootDir>/src/$1",
        "^@test/(.*)": "<rootDir>/test/$1",
        "^@openapi/(.*)": "<rootDir>/openapi/$1"
      },
      "transform": { "^.+\\.ts?$": "ts-jest" },
      "testMatch": ["<rootDir>/test/integration/**/*.test.ts"],
      "setupFilesAfterEnv": [
        "<rootDir>/test/setup/commonSetup.ts",
        "<rootDir>/test/setup/reseed.ts"
      ],
      "coveragePathIgnorePatterns": [
        "<rootDir>/src/api/*",
        "<rootDir>/test/*"
      ]
    },
    {
      "displayName": "acceptance",
      "moduleNameMapper": {
        "^@src/(.*)": "<rootDir>/src/$1",
        "^@test/(.*)": "<rootDir>/test/$1",
        "^@openapi/(.*)": "<rootDir>/openapi/$1"
      },
      "transform": { "^.+\\.ts?$": "ts-jest" },
      "testMatch": ["<rootDir>/test/acceptance/**/*.test.ts"],
      "setupFilesAfterEnv": [
        "<rootDir>/test/setup/commonSetup.ts",
        "<rootDir>/test/setup/reseed.ts"
      ],
      "coveragePathIgnorePatterns": [
        "<rootDir>/*"
      ]
    }
  ]
}