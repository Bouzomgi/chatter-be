{
  "name": "chatter-be",
  "version": "1.0.0",
  "description": "Chatter Backend",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npx tsc --watch\" \"nodemon -q -r dotenv/config dist/src/index.js\"",
    "test": "npx jest --setupFiles dotenv/config --detectOpenHandles",
    "clean": "npx tsc --build",
    "lint": "npx eslint --fix --ext .ts src/ test/ && npx prettier --write src/ test/ && npx prisma format",
    "check-lint": "npx eslint --ext .ts src/ test/ && npx prettier --check src/ test/",
    "gen-db-schema": "npx prisma generate",
    "gen-openapi-ts": "npx openapi-typescript ./openapi/schema.yaml -o ./openapi/schema.ts",
    "refresh-and-seed": "npx prisma migrate reset --force",
    "build": "npm run clean && npx tsc -p tsconfig-build.json && npx prisma generate"
  },
  "author": "",
  "license": "ISC",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.17.9",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "libpg-query": "^16.1.0",
    "nodemon": "^3.1.0",
    "openapi-typescript": "^7.0.0-rc.0",
    "prettier": "^3.2.5",
    "prisma": "^6.0.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^7.2.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.537.0",
    "@aws-sdk/s3-request-presigner": "^3.590.0",
    "@prisma/client": "^6.0.1",
    "aws-sdk": "^2.1628.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "envalid": "^8.0.0",
    "express": "^4.19.2",
    "express-validator": "^7.0.1",
    "http-status-codes": "^2.3.0",
    "i": "^0.3.7",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "npm": "^10.8.0",
    "swagger-ui-express": "^5.0.0",
    "ws": "^8.18.0"
  }
}
